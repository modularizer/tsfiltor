{
  "name": "tsfiltor",
  "version": "0.1.5",
  "description": "Composable TypeScript filters for querying and evaluating in-memory data.",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/modularizer/tsfiltor.git"
  },
  "bugs": {
    "url": "https://github.com/modularizer/tsfiltor/issues"
  },
  "homepage": "https://github.com/modularizer/tsfiltor#readme",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    },
    "./extensions": {
      "types": "./dist/types/extensions.d.ts",
      "import": "./dist/esm/extensions.js",
      "require": "./dist/cjs/extensions.js",
      "default": "./dist/esm/extensions.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:types",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:types": "tsc -p tsconfig.types.json",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "pre-commit": "npm test && npm run typecheck",
    "prepare": "husky install || true"
  },
  "keywords": [
    "filters",
    "query",
    "typescript",
    "conditions"
  ],
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "vitest": "^1.6.0",
    "@vitest/coverage-v8": "^1.6.0",
    "husky": "^9.0.0"
  }
}

